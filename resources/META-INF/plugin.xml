<idea-plugin version="2">
    <id>com.ledongli.GGTemplate.TemplateCreator</id>
    <name>TemplateCreator</name>
    <version>1.2.3</version>
    <vendor email="guojunfu@ledongli.me" url="http://www.ledongli.cn">JimmyGG</vendor>

    <description><![CDATA[
      Some Code Template Of Java, Such As Instance And Inner Handler .<br>
    ]]></description>

    <change-notes><![CDATA[
      如果您使用的Android Studio是2.3版本，请确保以下配置：
      * build.gradle: classpath 'com.android.tools.build:gradle:2.3.0'
      * app/build.gradle: buildToolsVersion '25.0.0'
      * gradle-wrapper.properties: distributionUrl=https\://services.gradle.org/distributions/gradle-3.3-all.zip
<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <action id="GGTemplate.template.creator.TemplateCreator" class="template.creator.TemplateCreator" text="TemplateCreator"
                description="TemplateCreator">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

    </actions>

</idea-plugin>